{
  "name": "backend-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontends",
    "build:backend": "tsc -p .",
    "build:frontends": "npm run build:consumer && npm run build:collectors && npm run build:dashboard",
    "build:consumer": "cd ../consumer-portal && npm run build",
    "build:collectors": "cd ../collectors-app && npm run build",
    "build:dashboard": "cd ../web-dashboard && npm run build",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}


